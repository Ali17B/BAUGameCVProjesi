<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Oyunlaştırılmış CV</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        @if (Context.Session.GetInt32("KullaniciId") != null)
        {
            <nav class="mb-4">
                <a href="/Kullanici/Dashboard" class="btn btn-link">🏠 Ana Sayfa</a>
                <a href="/Kullanici/BeceriEkle" class="btn btn-link">🧠 Yetenek Ekle</a>
                <a href="/Kullanici/ProjeEkle" class="btn btn-link">🧰 Proje Ekle</a>
                <a href="/Kullanici/AvatarSec" class="btn btn-link">🎭 Avatar</a>
                <a href="/Kullanici/PdfOlustur" class="btn btn-link">🧾 PDF İndir</a>

                @if (Context.Session.GetString("KullaniciEposta") == "admin@example.com")
                {
                    <a href="/Admin/Index" class="btn btn-warning">🛠️ Admin Paneli</a>
                }

                <a href="/Kullanici/Logout" class="btn btn-danger float-end">Çıkış Yap</a>
            </nav>
        }

        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)

</body>
</html>
