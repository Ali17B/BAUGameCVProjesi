@model OyunlastirilmisCV.Entities.Kullanici

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Profil";
}

<div class="card mt-5 mx-auto" style="max-width: 600px;">
    <div class="card-body text-center">
        <h2 class="card-title mb-3">🎮 Oyunlaştırılmış Profil</h2>
        @if (!string.IsNullOrEmpty(Model.AvatarUrl))
        {
            <img src="@Model.AvatarUrl" width="100" height="100" style="border-radius:50%;" class="mb-3" />
        }

        <h4 class="mb-1">👤 @Model.AdSoyad</h4>
        <p class="text-muted">🧩 Karakter Sınıfı: @Model.Sinifi</p>
        <p class="text-muted">🎖️ Seviye: @Model.Seviye</p>

        <div class="progress mt-3" style="height: 25px;">
            <div class="progress-bar bg-success" role="progressbar" style="width: @(Model.Seviye * 10)%;">
                XP @(Model.Seviye * 10)%
            </div>
        </div>

        <a href="/Kullanici/Logout" class="btn btn-outline-danger mt-4">Çıkış Yap</a>
    </div>
</div>

<hr class="my-5" />

<h3 class="text-center">🧠 Yetenekler</h3>
@if (Model.KullaniciBecerileri?.Any() == true)
{
    <div class="row justify-content-center mt-3">
        @foreach (var item in Model.KullaniciBecerileri)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm position-relative">
                    <!-- Sil butonu -->
                    <a href="/Kullanici/BeceriSil/@item.BeceriId"
                       class="btn btn-danger btn-sm rounded-circle position-absolute top-0 end-0 m-2"
                       title="Sil">
                        &times;
                    </a>

                    <div class="card-body text-center">
                        <h5 class="card-title">@item.Beceri.Ad</h5>
                        <p class="text-muted">Zorluk: @item.Beceri.ZorlukSeviyesi</p>
                        <p>Seviye: @item.Seviye / 10</p>

                        <div class="progress">
                            <div class="progress-bar bg-info" role="progressbar" style="width: @(item.Seviye * 10)%;"></div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center text-muted">Henüz beceri eklenmemiş.</p>
}


<hr class="my-5" />


@if (Model.KullaniciRozetleri?.Any() == true)
{
    
    <h3 class="text-center">🏅 Rozetler</h3>
    <div class="d-flex justify-content-center flex-wrap">
        @foreach (var rozet in Model.KullaniciRozetleri)
        {
            <div class="text-center m-2">
                <img src="@Url.Content(rozet.Rozet.IkonUrl)" width="60" height="60" />
                <div>@rozet.Rozet.Ad</div>
            </div>
        }
    </div>
}
else
{
    <p>Hiç rozet yok</p>
}

<hr class="my-5" />


<h3 class="text-center">🧰 Projeler</h3>
@if (Model.Projeler?.Any() == true)
{
    <div class="row justify-content-center mt-3">
        @foreach (var proje in Model.Projeler)
        {
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm position-relative">
                    <!-- Sil butonu -->
                    <a href="/Kullanici/ProjeSil/@proje.Id"
                       class="btn btn-danger btn-sm rounded-circle position-absolute top-0 end-0 m-2"
                       title="Sil">
                        &times;
                    </a>

                    <div class="card-body">
                        <h5 class="card-title">📌 @proje.ProjeAdi</h5>
                        <p class="card-text">@proje.Aciklama</p>
                        <p class="text-muted">Zorluk: @proje.ZorlukSeviyesi</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center text-muted">Henüz proje eklenmemiş.</p>
}

