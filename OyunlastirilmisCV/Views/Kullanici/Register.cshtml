@model OyunlastirilmisCV.Models.KullaniciKayitModeli
@{
    Layout = "~/Views/Shared/_LayoutGiris.cshtml";
    ViewData["Title"] = "Kayıt Ol";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <title>Kayıt Ol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f0f2f5;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-custom {
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.1);
        }

        .img-right {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row card-custom bg-white">
            <div class="col-md-6 p-5">
                <h2 class="mb-4 text-center">📝 Kayıt Ol</h2>

                @if (TempData["KayitBasarili"] != null)
                {
                    <div class="alert alert-success">@TempData["KayitBasarili"]</div>
                }

                <form asp-action="Register" asp-controller="Kullanici" method="post">
                    <div class="mb-3">
                        <label>Ad Soyad</label>
                        <input asp-for="AdSoyad" class="form-control" />
                        <span asp-validation-for="AdSoyad" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label>E-Posta</label>
                        <input asp-for="Eposta" class="form-control" />
                        <span asp-validation-for="Eposta" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label>Şifre</label>
                        <input asp-for="Sifre" type="password" class="form-control" />
                        <span asp-validation-for="Sifre" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label>Karakter Sınıfı</label>
                        <select asp-for="Sinif" asp-items="Html.GetEnumSelectList<OyunlastirilmisCV.Entities.KarakterSinifi>()" class="form-select"></select>
                        <span asp-validation-for="Sinif" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>

                    <p class="text-center mt-3">Zaten hesabınız var mı? <a href="/Kullanici/Login">Giriş Yap</a></p>
                </form>
            </div>

            <!-- Görsel Alanı -->
            <div class="col-md-6 d-none d-md-block p-0">
                <img src="/img/register-side.jpg" alt="Kayıt Görseli" class="img-right">
            </div>
        </div>
    </div>
</body>
</html>
