@{
    ViewData["Title"] = "Avatar Seç";
    var avatarlar = ViewBag.Avatarlar as List<string>;
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-4">🎭 Avatar Seçimi</h2>

<form asp-action="AvatarSec" method="post" class="d-flex flex-wrap justify-content-center gap-4 mt-4">
    @foreach (var url in avatarlar)
    {
        <div class="text-center">
            <label>
                <input type="radio" name="secilenAvatar" value="@url" class="d-block mx-auto mb-2" />
                <img src="@url" width="100" height="100" style="border-radius:50%; border:2px solid gray;" />
            </label>
        </div>
    }
    <div class="w-100 text-center mt-4">
        <button type="submit" class="btn btn-primary px-5">Kaydet</button>
    </div>
</form>
